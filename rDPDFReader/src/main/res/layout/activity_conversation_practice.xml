<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.naer.pdfreader.ConversationPractice">

    <TextView
        android:id="@+id/drama_name"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/textview_border"
        android:gravity="center"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/drama_four_num"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_toEndOf="@+id/drama_name"
        android:layout_alignParentTop="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/textview_border"
        android:gravity="center"
        android:textSize="24sp" />

    <Button
        android:id="@+id/drama_take"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@+id/drama_name"
        android:layout_marginTop="360dp"
        android:layout_marginLeft="150dp"
        android:background="@drawable/take" />

    <Button
        android:id="@+id/getanswer"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@+id/drama_take"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="150dp"
        android:background="@drawable/recordvoice"
        android:visibility="visible" />

    <Button
        android:id="@+id/hint"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@+id/getanswer"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/hint"
        android:onClick="getHint"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/drama_practice_photo"
        android:layout_width="730dp"
        android:layout_height="530dp"
        android:layout_below="@+id/drama_name"
        android:layout_toEndOf="@+id/drama_example_photo"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="60dp"
        android:background="@drawable/noimage2"
        app:srcCompat="@android:color/transparent" />

    <ImageView
        android:id="@+id/drama_example_photo"
        android:layout_width="310dp"
        android:layout_height="310dp"
        android:layout_below="@+id/drama_name"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="50dp"
        android:background="@drawable/add_border"
        app:srcCompat="@android:color/transparent" />

    <TextView
        android:id="@+id/practice_say_2"
        android:layout_width="600dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/drama_practice_photo"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/cha_b"
        android:layout_marginLeft="40dp"
        android:background="@drawable/textview_style"
        android:textIsSelectable="true"
        android:textSize="32sp"
        android:textStyle="bold"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/practice_say_1"
        android:layout_width="600dp"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/cha_a"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="30dp"
        android:background="@drawable/textview_style"
        android:textIsSelectable="true"
        android:textSize="32sp"
        android:textStyle="bold"
        android:visibility="invisible" />

    <Button
        android:id="@+id/next_page"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@+id/drama_practice_photo"
        android:layout_marginTop="20dp"
        android:layout_alignParentRight="true"
        android:background="@drawable/next"
        android:visibility="visible" />

    <TextView
        android:id="@+id/cha_a"
        android:layout_width="70dp"
        android:layout_height="60dp"
        android:layout_toEndOf="@+id/drama_four_num"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="120dp"
        android:textSize="32sp"
        android:textStyle="bold"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/cha_b"
        android:layout_width="70dp"
        android:layout_height="60dp"
        android:layout_toEndOf="@+id/drama_name"
        android:layout_below="@+id/drama_practice_photo"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="200dp"
        android:textSize="32sp"
        android:textStyle="bold"
        android:visibility="invisible" />

</RelativeLayout>