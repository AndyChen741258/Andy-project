<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.naer.pdfreader.CreatDrama">

    <ImageView
        android:id="@+id/drama1"
        android:layout_width="440dp"
        android:layout_height="330dp"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="120dp"
        app:srcCompat="@android:color/transparent" />

    <ImageView
        android:id="@+id/drama2"
        android:layout_width="440dp"
        android:layout_height="330dp"
        android:layout_toEndOf="@id/drama1"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="120dp"
        app:srcCompat="@android:color/transparent" />

    <ImageView
        android:id="@+id/drama3"
        android:layout_width="440dp"
        android:layout_height="330dp"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/drama1"
        app:srcCompat="@android:color/transparent" />

    <ImageView
        android:id="@+id/drama4"
        android:layout_width="440dp"
        android:layout_height="330dp"
        android:layout_below="@id/drama2"
        android:layout_toEndOf="@id/drama3"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="10dp"
        app:srcCompat="@android:color/transparent" />


    <Spinner
        android:id="@+id/dramanumber"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="50dp"/>

    <Button
        android:id="@+id/creat1"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="120dp"
        android:text="1" />

    <Button
        android:id="@+id/creat2"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_toEndOf="@id/drama1"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="120dp"
        android:text="2" />

    <Button
        android:id="@+id/creat3"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/drama1"
        android:text="3" />

    <Button
        android:id="@+id/creat4"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_toEndOf="@id/drama3"
        android:layout_below="@id/drama2"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="10dp"
        android:text="4" />

    <Button
        android:id="@+id/finish_and_return"
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="40dp"
        android:layout_marginTop="30dp"
        android:drawableLeft="@drawable/save4"
        android:paddingTop="5dp"
        android:paddingLeft="15dp"
        android:background="@drawable/save_drama_btn"
        android:text="儲存劇本" />

</RelativeLayout>