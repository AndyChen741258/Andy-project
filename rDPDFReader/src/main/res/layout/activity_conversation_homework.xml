<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back123"
    tools:context="com.naer.pdfreader.ConversationHomework">

    <Spinner
        android:id="@+id/homework_number"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="50dp"
        android:background="#F0E68C"/>

    <ImageView
        android:id="@+id/homework_photo"
        android:layout_width="800dp"
        android:layout_height="500dp"
        android:layout_below="@+id/homework_number"
        android:layout_toEndOf="@+id/order1"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/noimage2"/>

    <LinearLayout
        android:id="@+id/order1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="80dp"
        android:layout_below="@+id/homework_number">
        <Button
            android:id="@+id/homework_takephoto"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_below="@+id/homework_number"
            android:background="@drawable/take" />

        <Button
            android:id="@+id/homework_adddialog1"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/a_lines"
            android:onClick="hw_lineA_Click" />

        <Button
            android:id="@+id/homework_adddialog2"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_below="@+id/homework_adddialog1"
            android:layout_marginTop="20dp"
            android:background="@drawable/b_lines"
            android:onClick="hw_lineB_Click" />

        <Button
            android:id="@+id/homework_finish"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/homework_adddialog2"
            android:background="@drawable/ok_btn" />

    </LinearLayout>

    <TextView
        android:id="@+id/homework_say1"
        android:layout_width="341dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/homework_say2"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="75dp"
        android:drawableLeft="@drawable/resize_a_36"
        android:background="@drawable/textview_style"
        android:textIsSelectable="true"
        android:textSize="30sp"
        android:textStyle="bold"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/homework_say2"
        android:layout_width="341dp"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/homework_number"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/homework_photo"
        android:layout_marginTop="75dp"
        android:drawableLeft="@drawable/resixe_b_36"
        android:background="@drawable/textview_style"
        android:textIsSelectable="true"
        android:textSize="30sp"
        android:textStyle="bold"
        android:visibility="invisible" />





</RelativeLayout>