<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="650dp"
        android:layout_height="350dp"
        tools:layout_editor_absoluteX="30dp"
        tools:layout_editor_absoluteY="56dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/d_say"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="17dp"
                android:layout_marginBottom="12dp"
                android:text="編輯對話"
                android:textSize="24sp" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/recordplayer4"
                    android:layout_width="120dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/record_btn"
                    android:drawableLeft="@drawable/record_111"
                    android:paddingLeft="5dp"
                    android:text="開始錄音"
                    android:textAlignment="center" />

                <Button
                    android:id="@+id/stopplayer4"
                    android:layout_width="120dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/record_btn"
                    android:drawableLeft="@drawable/record_222"
                    android:paddingLeft="5dp"
                    android:text="停止錄音"
                    android:textAlignment="center" />

                <Button
                    android:id="@+id/playplayer4"
                    android:layout_width="120dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/record_btn"
                    android:drawableLeft="@drawable/playvoice_333"
                    android:paddingLeft="5dp"
                    android:text="播放錄音"
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/show_time4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:textSize="24dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/editText4"
                    android:layout_width="340dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="13dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="22dp"
                    app:layout_constraintBottom_toTopOf="@+id/b_say"
                    app:layout_constraintTop_toBottomOf="@+id/a_say">
                </EditText>

                <Button
                    android:id="@+id/btn_tts4"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/ic_baseline_play_circle_filled_24">

                </Button>
            </LinearLayout>


        </LinearLayout>
    </ScrollView>

</RelativeLayout>

