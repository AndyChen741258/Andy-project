<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.naer.pdfreader.ChoosePracticrPart">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />
    </ScrollView>

    <TextView
        android:id="@+id/way_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:text="請選擇想練習的對話內容"
        android:textSize="24sp" />

    <lib.kingja.switchbutton.SwitchMultiButton
        android:id="@+id/switchmultibutton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/way_text"
        android:paddingBottom="5dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="5dp"
        app:selectedColor="#000000"
        app:selectedTab="1"
        app:strokeRadius="5dp"
        app:strokeWidth="1dp"
        app:textSize="20sp"/>

<!--    <Spinner-->
<!--        android:id="@+id/practice_way"-->
<!--        android:layout_width="200dp"-->
<!--        android:layout_height="60dp"-->
<!--        android:layout_below="@+id/way_text"-->
<!--        android:layout_marginLeft="20dp"/>-->

    <TextView
        android:id="@+id/drama_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/switchmultibutton2"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:text="請選擇想練習的劇本編號(座號_劇本編號)"
        android:textSize="24sp" />

    <Spinner
        android:id="@+id/practice_drama_stu"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/switchmultibutton2"/>

    <lib.kingja.switchbutton.SwitchMultiButton
        android:id="@+id/switchmultibutton3"
        android:layout_width="wrap_content"
        android:layout_height="42dp"
        android:layout_below="@+id/drama_text"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_toEndOf="@+id/practice_drama_stu"
        android:paddingLeft="20dp"
        android:paddingTop="5dp"
        android:paddingRight="20dp"
        android:paddingBottom="5dp"
        app:selectedColor="#000000"
        app:selectedTab="1"
        app:strokeRadius="5dp"
        app:strokeWidth="1dp"
        app:textSize="18sp" />


<!--    <Spinner-->
<!--        android:id="@+id/practice_drama_num"-->
<!--        android:layout_width="200dp"-->
<!--        android:layout_height="60dp"-->
<!--        android:layout_toEndOf="@+id/practice_drama_stu"-->
<!--        android:layout_marginTop="50dp"-->
<!--        android:layout_marginLeft="20dp"-->
<!--        android:layout_below="@+id/switchmultibutton2"/>-->

    <TextView
        android:id="@+id/character_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/practice_drama_stu"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:text="請選擇想練習的角色"
        android:textSize="24sp" />

    <Spinner
        android:id="@+id/practice_character"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/character_text"/>
    <ImageView
        android:id="@+id/choose_drama_photo"
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:layout_below="@+id/practice_character"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"/>


</RelativeLayout>