<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp">

    <LinearLayout
        android:layout_width="500dp"
        android:layout_height="500dp"
        android:layout_centerInParent="true"
        android:padding="20dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="425dp"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:text="@string/answer_diff_title"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="18sp" />

            <Button
                android:id="@+id/btn_tts_chatbot"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/ic_baseline_play_circle_filled_24"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/answerTextViewDiff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/textview_border"
            android:text=""
            android:textSize="22sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Translate Correct"
            android:paddingTop="10dp"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/trans_correct"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:background="@drawable/textview_border"
            android:textSize="22sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="228dp"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:text="@string/user_diff_title"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="18sp" />
            <TextView
                android:id="@+id/chinese"
                android:layout_width="228dp"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="20sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/userTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text=""
            android:background="@drawable/textview_border_1"
            android:textSize="22sp" />

<!--        <TextView-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:text="Translate You Speak"-->
<!--            android:paddingTop="10dp"-->
<!--            android:textColor="@color/colorPrimaryDark"-->
<!--            android:textSize="18sp" />-->

<!--        <TextView-->
<!--            android:id="@+id/trans_speak"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:text=""-->
<!--            android:background="@drawable/textview_border"-->
<!--            android:textSize="22sp" />-->

        <TextView
            android:id="@+id/wrongTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:text="@string/wrong_word_title"
            android:textColor="@color/orangeRed"
            android:textSize="18sp" />

        <ScrollView
            android:id="@+id/wrongWordScrollView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fadeScrollbars="false"
            android:scrollbarThumbVertical="@color/colorPrimaryDark"
            android:scrollbarSize="5dp">>

            <LinearLayout
                android:id="@+id/wrongWord"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            </LinearLayout>
        </ScrollView>

    </LinearLayout>
</RelativeLayout>