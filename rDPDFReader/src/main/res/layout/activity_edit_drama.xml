<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/loadingPane"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.naer.pdfreader.EditDrama"
    tools:ignore="ExtraText">

    <RelativeLayout
        android:id="@+id/loadingPanel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:background="#808080"
        android:gravity="top">
        <ProgressBar
            android:layout_width="wrap_content"
            android:id="@+id/pg1"
            android:background="#00000000"
            android:layout_height="wrap_content"
            android:indeterminate="true"
            android:layout_alignParentStart="true" />
        <TextView
            android:text="You just finish your edit. Please wait for Loading......."
            android:background="#00000000"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/pg1"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:id="@+id/textView12"
            android:textColor="#FFFFFF"
           />
    </RelativeLayout>


    <ImageView
        android:id="@+id/editimage"
        android:layout_width="1184dp"
        android:layout_height="761dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="-73dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="40dp"
        android:layout_toEndOf="@+id/adddialog1"
        android:background="@drawable/textview_border"
        app:srcCompat="@android:color/transparent" />

    <Button
        android:id="@+id/adddialog1"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="180dp"
        android:background="@drawable/a_lines"
        android:visibility="invisible" />

    <Button
        android:id="@+id/adddialog2"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@+id/adddialog1"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/b_lines"
        android:visibility="invisible" />

    <Button
        android:id="@+id/finishedit"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="706dp"
        android:layout_marginEnd="1188dp"
        android:background="@drawable/ok_btn" />

    <!--    android:drawableLeft="@drawable/resize_a_36"-->

    <TextView
        android:id="@+id/say1"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="61dp"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="65dp"
        android:layout_toEndOf="@+id/say2"
        android:background="@drawable/textview_border"
        android:gravity="center_vertical"
        android:nestedScrollingEnabled="true"
        android:padding="8dp"
        android:textIsSelectable="true"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/say2"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/editimage"
        android:layout_marginTop="75dp"
        android:layout_marginLeft="70dp"
        android:background="@drawable/textview_border"
        android:textIsSelectable="true"
        android:textSize="30sp"
        android:padding="8dp"
        android:textStyle="bold"
        android:singleLine="false"
        android:maxLines="15"/>
<!--    android:drawableLeft="@drawable/resixe_b_36"-->

    <TextView
        android:id="@+id/say3"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/editimage"
        android:layout_alignParentTop="true"
        android:layout_marginStart="66dp"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="141dp"
        android:padding="8dp"
        android:background="@drawable/textview_border"
        android:textIsSelectable="true"
        android:textSize="30sp"
        android:textStyle="bold"
        android:singleLine="false"/>

    <TextView
        android:id="@+id/say4"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/editimage"
        android:layout_alignParentTop="true"
        android:layout_marginStart="65dp"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="217dp"
        android:width="1dp"
        android:background="@drawable/textview_border"
        android:padding="8dp"
        android:singleLine="false"
        android:textIsSelectable="true"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/say5"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/editimage"
        android:layout_alignParentTop="true"
        android:layout_marginStart="68dp"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="328dp"
        android:background="@drawable/textview_style"
        android:textIsSelectable="true"
        android:textSize="30sp"
        android:textStyle="bold"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/say6"
        android:layout_width="341dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/editimage"
        android:layout_alignParentTop="true"
        android:layout_marginStart="72dp"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="425dp"
        android:background="@drawable/textview_border"
        android:textIsSelectable="true"
        android:textSize="30sp"
        android:textStyle="bold"
        android:visibility="invisible" />

</RelativeLayout>