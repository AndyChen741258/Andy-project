<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.naer.pdfreader.EditDrama">

    <RelativeLayout
        android:id="@+id/loadingPanel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:background="#808080"
        android:gravity="top">
        <ProgressBar
            android:layout_width="wrap_content"
            android:id="@+id/pg1"
            android:background="#00000000"
            android:layout_height="wrap_content"
            android:indeterminate="true"
            android:layout_alignParentStart="true" />
        <TextView
            android:text="You just finish your edit. Please wait for Loading......."
            android:background="#00000000"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/pg1"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:id="@+id/textView12"
            android:textColor="#FFFFFF"
           />
    </RelativeLayout>


    <ImageView
        android:id="@+id/editimage"
        android:layout_width="923dp"
        android:layout_height="674dp"
        android:layout_toEndOf="@+id/adddialog1"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="40dp"
        android:layout_centerVertical="true"
        app:srcCompat="@android:color/transparent" />

    <Button
        android:id="@+id/adddialog1"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="180dp"
        android:background="@drawable/a_lines"
        android:onClick="buildLinesA_Click" />

    <Button
        android:id="@+id/adddialog2"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@+id/adddialog1"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/b_lines"
        android:onClick="buildLinesB_Click" />

    <Button
        android:id="@+id/finishedit"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginLeft="80dp"
        android:layout_below="@+id/adddialog2"
        android:layout_marginTop="100dp"
        android:background="@drawable/ok_btn" />

    <TextView
        android:id="@+id/say1"
        android:layout_width="341dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/say2"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="75dp"
        android:drawableLeft="@drawable/resize_a_36"
        android:background="@drawable/textview_style"
        android:textIsSelectable="true"
        android:textSize="30sp"
        android:textStyle="bold"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/say2"
        android:layout_width="341dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/editimage"
        android:layout_marginTop="75dp"
        android:layout_marginLeft="70dp"
        android:drawableLeft="@drawable/resixe_b_36"
        android:background="@drawable/textview_style"
        android:textIsSelectable="true"
        android:textSize="30sp"
        android:textStyle="bold"
        android:visibility="invisible" />

    <Button
        android:id="@+id/student_question"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@+id/finishedit"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="0dp"
        android:layout_toStartOf="@+id/editimage"
        android:background="@drawable/hint" />

</RelativeLayout>