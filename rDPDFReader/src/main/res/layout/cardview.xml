<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="350dp"
    android:background="@drawable/border_layout_card">

    <TextView
        android:id="@+id/row_photo_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/row_photo_stunum"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="30dp"
        android:layout_toEndOf="@+id/cardphoto"
        android:text="Title"
        android:textSize="24sp"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/row_photo_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/row_photo_title"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="30dp"
        android:layout_toEndOf="@+id/cardphoto"
        android:text="content"
        android:textSize="24sp"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <ImageView
        android:id="@+id/cardphoto"
        android:layout_width="234dp"
        android:layout_height="237dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="50dp"
        app:srcCompat="@android:color/transparent" />

    <TextView
        android:id="@+id/row_photo_stunum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="80dp"
        android:layout_toEndOf="@+id/cardphoto"
        android:text="TextView"
        android:textSize="24sp" />

    <Button
    android:id="@+id/row_btn_share"
    android:layout_width="80dp"
    android:layout_height="80dp"
    android:layout_marginRight="50dp"
    android:layout_marginTop="130dp"
    android:layout_alignParentRight="true"
        android:background="@drawable/share"/>
    <TextView
        android:id="@+id/share_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textSize="24sp"
        android:visibility="invisible"/>

    <Button
        android:id="@+id/listen_ttstts"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_toEndOf="@+id/cardphoto"
        android:layout_below="@+id/row_photo_title"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/listening_tts"
        android:textSize="24sp" />

</RelativeLayout>