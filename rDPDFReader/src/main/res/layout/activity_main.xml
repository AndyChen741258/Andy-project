<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/wooden2"
    tools:context="${packageName}.${activityClass}">


    <LinearLayout
        android:layout_width="220dp"
        android:layout_height="736dp"
        android:layout_below="@+id/Pwdedit"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="18dp"
        android:layout_marginTop="-131dp"
        android:layout_marginEnd="1042dp"
        android:layout_marginBottom="-73dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_describe"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="1dp"
            android:background="@drawable/main_file_btn"
            android:drawableTop="@drawable/explorer128"
            android:gravity="center_horizontal"
            android:paddingLeft="8dp"
            android:paddingTop="10dp"
            android:text="探索情境"
            android:textSize="24dp" />

        <Button
            android:id="@+id/btn_conversation"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_marginStart="12dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/main_file_btn"
            android:drawableTop="@drawable/conversation128"
            android:gravity="center_horizontal"
            android:paddingLeft="8dp"
            android:paddingTop="10dp"
            android:text="對話練習"
            android:textSize="24dp" />

        <Button
            android:id="@+id/drama_video_btn"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="40dp"
            android:layout_marginBottom="117dp"
            android:background="@drawable/main_file_btn"
            android:drawableTop="@drawable/theater128"
            android:gravity="center_horizontal"
            android:paddingLeft="8dp"
            android:paddingTop="10dp"
            android:text="戲劇(影片)創作"
            android:textSize="24dp"
            android:visibility="visible" />

        <Button
            android:id="@+id/btn_creatdrama"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_marginStart="12dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="1dp"
            android:background="@drawable/main_file_btn"
            android:drawableTop="@drawable/theater128"
            android:gravity="center_horizontal"
            android:paddingLeft="8dp"
            android:paddingTop="10dp"
            android:text="戲劇創作"
            android:textSize="24dp"
            android:visibility="invisible" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="719dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="976dp"
        android:layout_marginTop="43dp"
        android:layout_marginEnd="92dp"
        android:layout_marginBottom="-43dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_seedrama"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/main_file_btn"
            android:drawableTop="@drawable/cinema128"
            android:gravity="center_horizontal"
            android:paddingLeft="8dp"
            android:paddingTop="10dp"
            android:text="觀看劇本"
            android:textSize="24dp" />

        <Button
            android:id="@+id/btn_review"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_below="@+id/imageView1"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/main_file_btn"
            android:drawableTop="@drawable/research128"
            android:gravity="center_horizontal"
            android:paddingLeft="8dp"
            android:paddingTop="10dp"
            android:text="查看情境造句"
            android:textAlignment="center"
            android:textSize="24dp" />

        <Button
            android:id="@+id/btn_hw"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="407dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/main_file_btn"
            android:drawableTop="@drawable/homework"
            android:gravity="center_horizontal"
            android:paddingLeft="8dp"
            android:paddingTop="10dp"
            android:text="排行榜"
            android:textSize="24dp" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_sdcard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="29dp"
        android:layout_marginLeft="29dp"
        android:layout_marginTop="46dp"
        android:text="Open From sdcard"
        android:visibility="invisible" />
    <Button
        android:id="@+id/btn_asset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView1"
        android:layout_toRightOf="@+id/btn_about"
        android:text="Open Asset (ReadOnly)"
        android:visibility="invisible" />

    <Button
        android:id="@+id/btn_http"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_below="@+id/imageView1"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/main_file_btn"
        android:paddingTop="10dp"
        android:paddingLeft="8dp"
        android:drawableTop="@drawable/research128"
        android:gravity="center_horizontal"
        android:text="查看分享"
        android:textAlignment="center"
        android:textSize="24dp"
        android:visibility="gone"/>

    <Button
        android:id="@+id/btn_dialog"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:onClick="buttonSampleClick"
        android:text="對話練習"
        android:visibility="invisible"/>

    <Button
        android:id="@+id/btn_gl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="1dp"
        android:text="Simple OpenGL"
        android:visibility="invisible" />

    <Button
        android:id="@+id/btn_565"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_gl"
        android:layout_alignParentLeft="true"
        android:text="Using RGB_565"
        android:visibility="invisible" />

    <Button
        android:id="@+id/btn_4444"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_565"
        android:layout_alignParentLeft="true"
        android:text="Using ARGB_4444"
        android:visibility="invisible" />

    <Button
        android:id="@+id/btn_curl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_4444"
        android:layout_alignParentLeft="true"
        android:text="Curl Pages"
        android:visibility="invisible" />

    <Button
        android:id="@+id/btn_about"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_curl"
        android:layout_alignParentLeft="true"
        android:text="About"
        android:visibility="invisible" />

    <EditText
        android:id="@+id/IDedit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView1"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:visibility="invisible">

        <requestFocus />
    </EditText>


    <EditText
        android:id="@+id/Pwdedit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView2"
        android:layout_alignLeft="@+id/IDedit"
        android:ems="10"
        android:inputType="textPassword"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/IDedit"
        android:layout_alignLeft="@+id/textView1"
        android:layout_marginTop="22dp"
        android:text="密碼:"
        android:textSize="16sp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="60dp"
        android:layout_toLeftOf="@+id/IDedit"
        android:text="帳號:"
        android:textSize="16sp"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="704dp"
        android:layout_height="386dp"
        android:layout_below="@+id/btn_gl"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="335dp"
        android:src="@drawable/english_word" />

    <Button
        android:id="@+id/btn_file"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/imageView1"
        android:layout_toRightOf="@+id/btn_review"
        android:paddingTop="10dp"
        android:paddingLeft="8dp"
        android:drawableTop="@drawable/folder_1_128"
        android:gravity="center_horizontal"
        android:background="@drawable/main_file_btn"
        android:text="選擇文件"
        android:textSize="24dp"
        android:visibility="invisible"
        tools:ignore="NotSibling" />

    <Spinner
        android:id="@+id/spinner_std"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_http"
        android:layout_marginLeft="65dp"
        android:layout_marginTop="5dp"
        android:visibility="invisible"/>

    <Spinner
        android:id="@+id/spinner_work"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spinner_std"
        android:layout_marginLeft="65dp"
        android:layout_marginTop="5dp"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/number"
        android:layout_width="255dp"
        android:layout_height="45dp"
        android:layout_alignTop="@+id/editName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-31dp"
        android:text="請輸入你的班級+座號"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/editName"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:digits="1234567890"/>

    <!--    android:onClick="conversationClick"-->


    <com.github.clans.fab.FloatingActionMenu
        android:id="@+id/fab_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="14dp"
        app:menu_backgroundColor="@android:color/transparent"
        app:menu_fab_label="test"
        app:menu_openDirection="up"
        app:menu_showShadow="true">

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/fab_item1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_message_24"
            app:fab_label="@string/item1"
            app:fab_size="mini" />

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/fab_item2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_notes_24"
            app:fab_label="@string/item2"
            app:fab_size="mini" />

    </com.github.clans.fab.FloatingActionMenu>


</RelativeLayout>


